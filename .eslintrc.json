{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": [
                "**/*.test.ts?(x)",
                "**/*.spec.ts?(x)",
                "**/test-utils.ts",
                "webpack.config.js"
              ]
            }
          ]
    }
}
